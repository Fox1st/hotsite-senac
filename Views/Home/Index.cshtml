@model Interesse
@{
    ViewData["Title"] = "Hotsite";
}
<div class="row mt-2">
    <div class="col-md">
        <h1>Iniciativa Saúde da Cidade</h1>
        <p>
            Texto sobre vida saudável: Lorem ipsum dolor sit amet et delectus accommodare his consul copiosae
            legendos at vix ad putent delectus delicata usu. Vidit dissentiet eos cu eum an brute copiosae
            hendrerit.
        </p>
        <p>
            Texto sobre a iniciativa: Lorem ipsum dolor sit amet et delectus accommodare his consul copiosae
            legendos at vix ad putent delectus delicata usu. Vidit dissentiet eos cu eum an brute copiosae
            hendrerit.
        </p>
    </div>

    <img src="/images/cidade.jpg" alt="Praça da cidade" class="img-fluid col-md ms-auto" />
</div>

<div class="row m-2">
    <div class="col-md-5 border border-dark p-2">
        <h2>Entre em contato:</h2>
        <p>Nos mande uma mensagem e fique por dentro de nossos eventos</p>

        <form action="/Home/Cadastrar" method="POST" id="formInteresse">
            <div class="form-group row">
                <label asp-for="Nome" class="col-sm-2 col-form-label">Nome:</label>
                <div class="col-sm-10">
                    <input asp-for="Nome" class="form-control" required/>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label">Email:</label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" required/>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Mensagem" class="col-sm-2 col-form-label">Mensagem (opcional):</label>
                <div class="col-sm-10">
                    <textarea asp-for="Mensagem" class="form-control"></textarea>
                </div>
            </div>
            <input type="submit" value="Enviar" class="float-right" />
        </form>
        <partial name="_ModalCadastroSucesso" />
        <partial name="_ModalCadastroFalha" />
    </div>

    <div class="col-md-6 offset-md-1 mt-2">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col text-center utilidades" id="eventos">
                    <img src="/images/agenda.png" alt="Agenda de Eventos" class="img-fluid" />
                    <figcaption>
                        <p>Agenda de Eventos</p>
                    </figcaption>
                </div>
                <partial name="_ModalEventos" />
                <div class="col text-center utilidades" id="dicas">
                    <img src="/images/saude.jpg" alt="Dicas de Saúde" class="img-fluid" />
                    <figcaption>
                        <p>Dicas de Vida Saudável</p>
                    </figcaption>
                </div>
                <partial name="_ModalDicas" />
                <div class="col text-center utilidades" id="apoiadores">
                    <img src="/images/apoiadores.jpg" alt="Apoiadores" class="img-fluid" />
                    <figcaption>
                        <p>Apoiadores</p>
                    </figcaption>   
                </div>
                <partial name="_ModalApoiadores" />
            </div>
        </div>
    </div>
</div>
